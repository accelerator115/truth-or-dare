
.uni-popup {
		position: fixed;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		z-index: 99;
}
.uni-popup__mask {
		position: absolute;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		background-color: rgba(0, 0, 0, 0.4);
		opacity: 0;
}
.uni-popup__wrapper {
		position: absolute;
		z-index: 10;
}
.uni-popup.center .uni-popup__wrapper {
		position: fixed;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
}
.uni-popup.uni-popup--show {
		display: block;
}
.uni-popup.uni-popup--show .uni-popup__mask {
		opacity: 1;
}
